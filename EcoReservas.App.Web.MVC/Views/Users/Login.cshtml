@model Users

<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">EcoReservas</h3></div>
                                <div class="card-body">
                                    <form asp-action="Login" asp-controller="User" >
                                        <div class="form-floating mb-3">
                                            <input asp-for="UserName" class="form-control" id="inputUserName" type="text" placeholder="User" />
                                            <label for="inputUserName">User Name</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input asp-for="Password" class="form-control" id="inputPassword" type="password" placeholder="Password" />
                                            <label for="inputPassword">Password</label>
                                        </div>
                                       
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            
                                            <input type="submit" value="Login" />
                                        </div>
                                        <span>@ViewBag.Error</span>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3">
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            
        </div>
    </div>
</body>