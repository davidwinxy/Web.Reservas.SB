@model Users


<body>
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div><h3 class="text-center font-weight-light my-4">EcoReservas</h3></div>
                                <hr class="separador" />
                                <div class="card-body">
                                    <form asp-action="Login" asp-controller="Users">
                                        <div class="form-floating mb-3">
                                            <input asp-for="UserName" class="form-control" id="inputUserName" type="text" placeholder="User" />
                                            <label for="inputUserName">User Name</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input asp-for="Password" class="form-control" id="inputPassword" type="password" placeholder="Password" />
                                            <label for="inputPassword">Password</label>
                                        </div>

                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <input type="submit" value="Login" class="btn btn-Login w-100 py-3 rounded-2">
                                        </div>
                                        <span class="error-message">@ViewBag.Error</span>
                                    </form>
                                </div>
                                <div class="card-footer text-center">
                                    <div class="small"><a href="@Url.Action("Create", "Users")">Crear una cuenta</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>


</body>