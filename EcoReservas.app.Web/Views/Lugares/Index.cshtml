@model IEnumerable<EcoReservasEN.Lugares>

@{
    ViewData["Title"] = "Index";
    bool isAdmin = User.Identity.IsAuthenticated && User.IsInRole("Admin");
}
<br />

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <img src="@item.ImagenUrl" class="card-img-top card-img" alt="@item.Nombre">
                <div class="card-body">
                    <div class="center">
                        <h5 class="card-title">@item.Nombre</h5>
                        <hr class="separador" />
                        <p class="card-text">@Html.Raw(item.Descripcion)</p>
                        <a href="@Url.Action("Details", new {Id = item.Id})" class="btn btn-primary"><i>Ver Más</i></a>
                        @if (isAdmin)
                        {
                            <td >
                                <a href="@Url.Action("Edit", new {pId = item.Id})" class="btn btn-success"><i>EDITAR</i></a>

                                <a href="@Url.Action("Delete", new {Id = item.Id})" class="btn btn-danger"><i>BORRAR</i></a>
                            </td>

                      
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
<script>

    $(document).ready(function () {
        $('#descripcion').summernote();
    });

</script>
}
